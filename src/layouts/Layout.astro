import LinkWhatsapp from "../components/linkWhatsapp/LinkWhatsapp.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width"/>
	<link rel="shortcut icon" href="/assets/logo.ico?=2"/>
	<meta name="generator" content={Astro.generator} />
	<title>Maestría del Hierro</title>
</head>
<body>
	<Header />
	<slot /> <!-- Aquí se inyectará el contenido de cada página -->
	<Footer />
	<LinkWhatsapp />
