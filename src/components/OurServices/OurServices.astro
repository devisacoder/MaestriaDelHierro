---
import { items } from "./images";
import "./OurServices.css";
import Image from "astro/components/Image.astro";

---
<section id="servicios" class="w-full bg-azulPetroleo py-12 md:py-16 ">
    <div class="w-full flex flex-col md:flex-row items-center md:justify-normal justify-between gap-8 lg:gap-12 xl:gap-16 flex-nowrap">
        <article class="flex-1 md:w-[45%] lg:w-[50%] px-4 md:text-left service md:ml-10">
            <h2 class="text-3xl flex flex-col text-center sm:text-4xl md:text-5xl lg:text-6xl font-bold font-raleway text-grisOscuro leading-tight">
                Servicio dentro y fuera de
                <span class="text-yellow inline-block mt-2 md:mt-4">Bogotá</span>
            </h2>
            <p class="text-base flex text-center sm:text-lg md:text-xl lg:text-2xl text-grisOscuro mt-4 md:mt-6 lg:mt-8">
                Fabricamos ventanas, portones eléctricos, marquesinas, puertas de seguridad, estructura liviana, pesada, cortinas, techos y todo lo relacionado con la rama.
            </p>
        </article>

        <div class="flex-shrink-0 w-2/4 md:w-[60%] lg:w-[55%] px-4 md:mr-8">
            <article class="grid wrapper grid-cols-3 gap-2 sm:gap-3 w-full max-w-[820px] mx-auto">
                {items.map((item) => (
                    <div class="images-example aspect-square relative overflow-hidden transition-transform duration-300 hover:scale-[1.03]">
                        <Image
                            class="w-full h-full object-cover rounded-lg shadow-lg"
                            src={item.src}
                            width={200}
                            height={200}
                            loading="lazy eager"
                            alt={`Imagen de servicio: ${item.alt}`}
                        />
                        <div class="absolute inset-0 bg-black/20 hover:bg-black/30 transition-colors"></div>
                    </div>
                ))}
            </article>
        </div>
    </div>
</section>
