---
import { imgsPortfolio } from "./imgsPortfolio.js";
import './PortfolioGallery.css'
import Image from "astro/components/Image.astro";

const getClassName = (index) => `image-${index + 1}`;
---
<section id="portfolio" class="w-full bg-azulPetroleo flex flex-col items-center justify-center ">
    <ul class="w-[90%] containerPortfolio">
        
        {imgsPortfolio.map((item, index) => (
            <li
                key={index} 
                class={`${getClassName(index)} relative overflow-hidden rounded-lg  cursor-pointer`}
                aria-labelledby={`portfolioItem${index}`}
            >
                <Image
                    class="w-full h-full target-image object-cover"
                    src={item.src}
                    width={100}
                    height={100}
                    loading="eager"
                    alt={item.alt}
                />
                <div class="w-full inset-0 h-full container-info ">
                    <div class="inset-0 w-full h-2/4 p-2 bg-black/70 absolute tarjet flex flex-col">
                        <div class="flex text-white w-full h-full overflow-hidden flex-col">
                            {/* <h1 class="text-white">{index + 1}</h1> */}
                            <h3 class="text-[8px] md:text-[24px] lg:text-[32px] font-bold">
                                {item.alt}
                            </h3>
                            <p class="text-grisClaro text-[4px] md:text-[12px] lg:text-[20px]  break-words whitespace-normal truncate">
                                {item.description}
                            </p>
                        </div>
                    </div>
                </div>
            </li>
        ))}
    </ul> 
</section>
