---
import Image from "astro/components/Image.astro";
import "./hero.css";
---

<section
    id="inicio"
    class="hero-container w-full relative flex justify-center items-center mt-[60px] bg-black"
>
    <Image
        src="/assets/videoHero.webp"
        alt="Video representativo de Maestría del Hierro"
        width={100}
        height={100}
        format="webp"
        loading="eager"
    />
    
    <div class="hero-text absolute mt-[20px]">
        <h1 class="hero-title font-sans text-white/90 flex items-center text-[98px] font-extrabold">
            <span class="text-[48px]">+</span><span class="text-yellow_two">30&nbsp</span>años de experiencia
        </h1>
        <div class="container-sub-title mt-16 text-white/90 ml-6 text-[64px] font-work font-thin">
            <p>Más de 2000 clientes</p>
            <p>A lo largo de Bogotá y Colombia.</p>
        </div>
    </div>
</section>

<script>
    const textHero = document.querySelector(".hero-title");
    const subTitles = document.querySelector(".container-sub-title");

    document.addEventListener("DOMContentLoaded", ()=>{
        textHero?.classList.add("show");
        subTitles?.classList.add("show-subtitles");
    });
</script>
