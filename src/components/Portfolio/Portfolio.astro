---
import { itemsImg } from "./img.js";
import "./portfolio.css";
import Image from "astro/components/Image.astro";

const getClassName = (index) => `img-${index + 1}`;
---

<section id="portfolio" class="w-full bg-azulPetroleo flex flex-col items-center justify-center py-8 lg:py-2 md:py-2 ">
    <h1 class="text-yellow font-sans text-[26px] md:text-[30px] lg:text-[48px] font-semibold p-6 tracking-wide">Proyectos</h1>
    <ul class="w-[90%] grid grid-cols-4 grid-rows-4 container-img-portfolio">
        {itemsImg.map((item, index) => (
            <li
                key={index} 
                class={`${getClassName(index)} relative overflow-hidden rounded-lg shadow-sm shadow-black`}
                aria-labelledby={`portfolio-item-${index}`}
                >
                <Image
                    class="w-full h-full target-image object-cover"
                    src={item.src}
                    width={100}
                    height={100}
                    loading="lazy"
                    alt={item.alt}
                />
                <div class="w-full inset-0 h-full container-tarjet ">
                    <div class="inset-0 w-full h-2/4 bg-black/70 absolute tarjet-info flex flex-col">
                        <div class="flex text-white w-full h-full overflow-hidden flex-col">
                            <h3 class="text-[14px] md:text-[24px] lg:text-[32px] font-bold">
                                {item.alt}
                            </h3>
                            <p class="text-grisClaro text-[10px] md:text-[12px] lg:text-[20px]  break-words whitespace-normal truncate">
                                {item.description}
                            </p>
                        </div>
                    </div>
                </div>
            </li>
        ))}
    </ul> 
    <div class="flex justify-center p-4">
        <button 
            class="button-tarjet self-end text-grisClaro lg:w-[168px] lg:h-[51px] md:w-[120px] md:h-[40px] h-[34px] w-[110px] lg:text-[24px] md:text-[18px] text-[14px]"
            aria-label="Ver más proyectos"
        >
            Ver más
        </button>
    </div>
</section>
